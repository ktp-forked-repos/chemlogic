#!/bin/sh

cd $1
 	TAG=`./build/versionName`
	BUILDER="$USER@`hostname`"
	DATE=`date "+%F %R"`
	COMMIT=`git log --pretty=format:%H HEAD -1`
	SOURCEPATH=$PWD
cd -

	echo "
---
Chemlogic $TAG 
($COMMIT)
---

<$BUILDER>
Built at: $DATE
Source path: $SOURCEPATH" > Buildinfo

echo "version('$TAG')" >> build/compile.cf.dist
