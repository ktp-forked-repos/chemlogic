#!/bin/sh

	TAG=$1
 	DISTDIR="../chemlogic-$1/"
	BUILDER="$USER@`hostname`"
	DATE=`date "+%F %R"`
	COMMIT=`git log --pretty=format:%H HEAD -1`
	SOURCEPATH=$PWD

	echo "
---
Chemlogic $TAG 
($COMMIT)
---

<$BUILDER>
Built at: $DATE
Source path: $SOURCEPATH" > $DISTDIR/Buildinfo

echo "cf_version('$TAG')." >> $DISTDIR/build/compile.cf.dist
