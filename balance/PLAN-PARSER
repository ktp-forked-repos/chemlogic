:- set_prolog_flag(double_quotes,chars).
:- use_module(library(clpq)).

expr_classic([H|T]) --> formula(H), " + ", expr_classic(T), !.
expr_classic([H]) --> formula(H).

formula(cows) --> "COWS",  {writeln('Run'),{2 * X + 5 = 15}}.
formula(dogs) --> "DOGS", {writeln('Run'), {2 * X + 5 = 15}}.
formula(pigs) --> "PIGS", {writeln('Run'), {2 * X + 5 = 15}}.

expr_new([H|T]) --> formula(H), expr_tail(T), !.
expr_tail(List) --> " + ", expr_new(List).
expr_tail([]) --> [].
